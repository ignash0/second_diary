<main id="diary">
    <div id="">
        <h1>Дневник учащегося группы </h1>
        <p><%= name %></p>
        <div class='slider'>
        <div id="left"></div>
        <div class="container">
        <% learningWeeks.forEach(weekLearning => { %>
        <section >
            <p>Учебная неделя </p>
            <p><%= weekLearning.start %> <%= weekLearning.end %></p>
            <div class="teacherWeek">
                    <% let firstHalfWeek = [{'en': "monday",'ru': 'Понедельник'},{'en':"tuesday", 'ru': 'Вторник'},{'en':"wednesday", 'ru': 'Среда'}],
                        secondHalfWeek  = [{'en': "thursday",'ru': 'Четверг'},{'en':"friday", 'ru': 'Пятница'},{'en':"saturday", 'ru': 'Суббота'}];%>

                    <% function week(partWeek) { %>
                        <% partWeek.forEach(day => { %>
                            <% let subject = {'lesson-1': '', 'lesson-2': '', 'lesson-3': '', 'lesson-4': '', 'lesson-5': ''}, 
                                 homeWork = {'lesson-1': '', 'lesson-2': '', 'lesson-3': '', 'lesson-4': '', 'lesson-5': ''},
                                 mark = {'lesson-1': '', 'lesson-2': '', 'lesson-3': '', 'lesson-4': '', 'lesson-5': ''};
                                if (weekLearning.lessonWeek[day.en]) {
                                    weekLearning.lessonWeek[day.en].forEach(lesson => {
                                        subject[lesson.numberLesson] = lesson.subject;
                                        homeWork[lesson.numberLesson] = lesson.homework;
                                        mark[lesson.numberLesson] = lesson.mark;
                                    })
                                }%>
                            <div class="day">
                                <table id=<%= day.en %>>
                                    <colgroup>
                                    <col style="width:10%">
                                    <col style="width:30%">
                                    <col style="width:40%">
                                    <col style="width:20%">
                                    </colgroup> 
                                    <thead>
                                        <tr>
                                            <th colspan="4"><%= day.ru %></th>
                                        </tr>
                                        <tr>
                                        <th>№</th>
                                        <th>Предмет</th>
                                        <th>Домашнее задание</th>
                                        <th>Отметка</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr class="lesson-1">
                                            <td>1</td>
                                            <td class="subject"><%= subject['lesson-1'] %></td>
                                            <td class="homeWork"><%= homeWork['lesson-1'] %></td>
                                            <td class="mark"><%= mark['lesson-1'] %></td>
                                            </td>
                                        </tr>
                                        <tr class="lesson-2">
                                            <td>2</td>
                                            <td class="subject"><%= subject['lesson-2'] %></td>
                                            <td class="homeWork"><%= homeWork['lesson-2'] %></td>
                                            <td class="mark"><%= mark['lesson-2'] %></td>
                                            </td>
                                        </tr>
                                        <tr class="lesson-3">
                                            <td>3</td>
                                            <td class="subject"><%= subject['lesson-3'] %></td>
                                            <td class="homeWork"><%= homeWork['lesson-3'] %></td>
                                            <td class="mark"><%= mark['lesson-3'] %></td>
                                            </td>
                                        </tr>
                                        <tr class="lesson-4">
                                            <td>4</td>
                                            <td class="subject"><%= subject['lesson-4'] %></td>
                                            <td class="homeWork"><%= homeWork['lesson-4'] %></td>
                                            <td class="mark"><%= mark['lesson-4'] %></td>
                                            </td>
                                        </tr>
                                        <tr class="lesson-5">
                                            <td>5</td>
                                            <td class="subject"><%= subject['lesson-5'] %></td>
                                            <td class="homeWork"><%= homeWork['lesson-5'] %></td>
                                            <td class="mark"><%= mark['lesson-5'] %></td>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        <% }) %>
                    <% } %>
                <div class="firstHalfWeek">
                    <% week(firstHalfWeek) %>
                </div>
                <div class="secondHalfWeek">
                <% week(secondHalfWeek) %>
                </div>                    
            </div>
        </section>
        <% }) %>
       </div>
       <div id="right"></div> 
       </div>
    </div>
</main>
